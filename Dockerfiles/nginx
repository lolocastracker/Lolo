FROM nginx:latest
COPY ./nginx/route.conf /etc/nginx/conf.d/default.conf
RUN curl https://raw.githubusercontent.com/vishnubob/wait-for-it/master/wait-for-it.sh -o wait-for-it.sh
RUN chmod +x ./wait-for-it.sh
RUN chmod +x wait-for-it.sh
CMD ["/wait-for-it.sh", "backend:5000","--","/wait-for-it.sh", "frontend:3000","--","nginx", "-g", "daemon off;"]
